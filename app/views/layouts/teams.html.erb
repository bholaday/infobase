<% content_for :content do %>
  <div id="breadcrumb">
    <%= link_to "Teams Home", teams_path %>&nbsp;
    <%= link_to ">" + Region.full_name(@region), region_teams_path + "/" + @region if @region %>
    <%= link_to ">" + State.states[@state], region_teams_path + "/" + @region + "/state/" + @state if @state && @region %>
    <%= link_to ">" + @city, region_teams_path + "/" + @region + "/state/" + @state + "/city/" + @city if @state && @city && @region %>
    <%= link_to ">" + Country.full_name(@country), region_teams_path + "/" + @region + "/country/" + @country if @country && @region %>
    <%= link_to ">" + @city, region_teams_path + "/" + @region + "/country/" + @country + "/city/" + @city if @country && @city && @region %>
    <%= link_to "Advanced Team Search", search_teams_path %>
    <%= link_to "Propose New Team", new_team_path %>
  </div>
  <%= yield %>
<% end %>
<%= render :file => 'layouts/application' %>
