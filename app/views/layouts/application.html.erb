<!DOCTYPE html>
<html>
<head>
  <title><%= @title || "Infobase" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' ,
                             'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <style>
    /* Banner bar background style */
    #bannerBar {
      background: url(/images/header_images/<%= random_banner_image %>) no-repeat;
      height: 116px;
      clear: both;
      border-bottom: 3px solid #969f5e;
    }
  </style>
</head>
<body>
  <div id="wrapper">
    <%= render :partial => "headers/staffsite_small" %>
    <div id="innerwrapper">
      <div id="logobar">
        <div class="logoside">
          <a href="" class="logo" alt="InfoBase Home"></a>  <!--TODO: Fix link-->
          <div id="helpside" class="float-right">
            <a href="/logout">Logout</a>
            <a class="help" target="_blank" href="http://wiki.uscm.org/display/NCO/Infobase+Help">
              <img id="helpImg" src="/images/help.gif" alt="help" /> 
              InfoBase Help
            </a>
          </div>
        </div><!-- logoside -->
      </div><!-- logobar -->
  
      <%= render :partial => "headers/menubar" %>
      <div id="bannerBar"></div>
      
      <div id="content">
        <%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>
        <%= content_for?(:content) ? yield(:content) : yield %>
      </div>
      
      <div class="clear"></div>
          
      <div id="footer">
        &copy; Copyright <%=Time.now.year%> Campus Crusade for Christ International<br/>
        <a href="mailto:help@campuscrusadeforchrist.com" class="sendfeedback">Send Feedback</a>&nbsp;
      </div>

    </div>
  </div>
</body>
</html>
