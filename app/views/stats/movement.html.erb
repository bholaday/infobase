<script type="text/javascript" language="javascript">
  var infoTimer;
  var infoBoxEl;
  function infoBox(mW,info,left) {
    document.getElementById(mW+'_info_box').innerHTML=document.getElementById(info+'_info_box').innerHTML;
    infoBoxEl=document.getElementById(mW+'_info_box');
    infoBoxEl.style.left=left+'px';
    infoTimer=setTimeout("infoBoxEl.style.display='block';",200);
  }

  function infoBoxClear(mW) {
    clearTimeout(infoTimer);
    document.getElementById(mW+'_info_box').style.display='none';
    document.getElementById(mW+'_info_box').innerHTML='';
  }
</script>

<h1>Enter Stats for <%= display_date(@current_week) %> to <%= display_date(@current_week + 6.days) %></h1>
<div class="enter_stat" id="enter_stat">
  <!-- Dates on top -->
  <div style="float:right;">
    <ul id="tab_wrapper">
      <% 14.downto(0) do |week_ago| %>
        <% sunday = @current_week - week_ago.weeks %>
        <li class="weekTab" style="<%= first_week(sunday) ? "background:#D3D3D3" : "" %>">
          <!-- TODO: link to each week -->
          <%= display_date_short(sunday) %><br/>to<br/><%= display_date_short(sunday + 6.days) %>
        </li>
      <% end %>
    </ul>
  </div>
  
  <div style="clear:both"></div>
  
  <%= form_tag stats_path, :method => :put, :name => "fast_ll_stat", :id => "fast_ll_stat" do %>
    <% javascript_counter = 0 %>
    <ul class="results">
      <% @stats.each do |stat| %>
        <% if stat.instance_of?(Array) && stat.first.activity.strategy == "BR" %>
          <%= render :partial => "stat_bar", :locals => {:stat => stat.first, :current_week => @current_week, :counter => javascript_counter} %>
          <% stat.each do |br_stat| %>
            <%= render :partial => "stat_form", :locals => {:stat => br_stat, :current_week => @current_week, :counter => javascript_counter} %>
          <% end %>
          </li>
        <% else %>
          <%= render :partial => "stat_bar", :locals => {:stat => stat, :current_week => @current_week, :counter => javascript_counter} %>
          <%= render :partial => "stat_form", :locals => {:stat => stat, :current_week => @current_week, :counter => javascript_counter} %>
          </li>
        <% end %>
        <% javascript_counter += 1 %>
      <% end %>
    </ul>
    
    <center>
      <div class="stats_submit_surround">
        <%= image_submit_tag "/images/submit_bon.gif" %>
      </div>
    </center>
  <% end %>
</div>

<script type="text/javascript" language="javascript">
  $('#0').toggleClass('selected');
</script>

<noscript>
  <style type="text/css">
    ul.results li{
      height: auto;
    }
  </style>
</noscript>

