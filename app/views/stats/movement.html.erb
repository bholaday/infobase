<script type="text/javascript" language="javascript">
  var infoTimer;
  var infoBoxEl;
  function infoBox(mW,info,left) {
    document.getElementById(mW+'_info_box').innerHTML=document.getElementById(info+'_info_box').innerHTML;
    infoBoxEl=document.getElementById(mW+'_info_box');
    infoBoxEl.style.left=left+'px';
    infoTimer=setTimeout("infoBoxEl.style.display='block';",200);
  }

  function infoBoxClear(mW) {
    clearTimeout(infoTimer);
    document.getElementById(mW+'_info_box').style.display='none';
    document.getElementById(mW+'_info_box').innerHTML='';
  }
</script>

<h1 class="multi"><span class="title">Enter Stats for</span> <%= display_date(@requested_week) %> to <%= display_date(@requested_week + 6.days) %></h1>
<div class="enter_stat" id="enter_stat">
  <!-- Dates on top -->
  <div style="float:right;">
    <ul id="tab_wrapper">
      <% 14.downto(0) do |week_ago| %>
        <% sunday = @current_week - week_ago.weeks %>
        <li class="weekTab" style="<%= sunday == @requested_week ? "font-weight:bold;" : "" %><%= first_week(sunday) ? "background:#D3D3D3;" : "" %>">
          <%= link_to (stats_path + "?date=" + display_date_dash(sunday)) do %>
            <%= display_date_short(sunday) %><br/>to<br/><%= display_date_short(sunday + 6.days) %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  
  <div style="clear:both"></div>
  
  <%= form_tag stats_path, :method => :put, :name => "fast_ll_stat", :id => "fast_ll_stat" do %>
    <%= hidden_field_tag "date", @requested_week %>
    <% javascript_counter = 0 %>
    <ul class="results">
      <% if @stats %> <!-- There were errors from saving -->
        <% @stats.each do |stat| %>
          <%= render :partial => "stat_entry", :locals => {:stat => stat, :current_week => @current_week, :counter => javascript_counter} %>
          <% javascript_counter += 1 %>
        <% end %>
      <% else %>
        <% @movements.each do |movement| %>
          <% stat = movement.get_stat_for(@requested_week) %>
          <%= render :partial => "stat_entry", :locals => {:stat => stat, :current_week => @current_week, :counter => javascript_counter} %>
          <% javascript_counter += 1 %>
        <% end %>
      <% end %>
    </ul>
    
    <% if !@stats.blank? || !@movements.blank? %>
      <center>
        <div class="stats_submit_surround">
          <%= image_submit_tag "submit.png" %>
        </div>
      </center>
    <% else %>
      <center>
        <div class="field">
          You have no activities bookmarked to enter stats for.  You need to search for a location to enter stats for before you can use this feature.
        </div>
      </center>
    <% end %>
  <% end %>
</div>

<script type="text/javascript" language="javascript">
  $('#0').toggleClass('selected');
</script>

<noscript>
  <style type="text/css">
    ul.results li{
      height: auto;
    }
  </style>
</noscript>

