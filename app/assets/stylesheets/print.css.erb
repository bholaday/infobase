body {
  font-family: Arial, Helvetica, Verdana;
  font-size: 12px;
}

.reporttable {
  border-collapse: collapse;
}

div#stat_report {
	display:block;
	overflow:hidden;
}

td.muster_cap {
  font-weight: bold;
}

td.report_light,td.report_darker,td.label,td.split {
	margin:0px;
	padding:0px;
  padding-top:3px;
  padding-bottom:3px;
  font-family:verdana,arial,sans-serif;
  color:black;
  font-size:10px;
  overflow:hidden;
  border-top:solid 2px #cdcdcd;
  border-bottom:solid 2px #cdcdcd;
  border-left:solid 1px #cdcdcd;
  border-right:solid 1px #cdcdcd;
}

td.report_light, td.report_darker,td.split {
  margin:0px;
  text-align:center;
  width:59px;
  vertical-align:middle;
}

div.bridges_split td.report_light, div.bridges_split td.report_darker, div.bridges_split td.label {
  border-top:solid 1px #cdcdcd;
  border-bottom:solid 1px #cdcdcd;
}

td.label {
  text-align:right;
  width:228px;
}

td.sensitive {
  font-style:italic;
}

table.row, table.row_tall,table.row_short {
	border-collapse:collapse;
	padding:0px;
	margin:0px;
  display:block;
  overflow:hidden;
}

table.row td {
	height:45px;
}

table.row_short td {
}

td.label {
  background-color:#ffffff;
  padding-right: 5px;
}

td.report_light {
  background-color:#fffdd7;
}

td.report_darker {
  background-color:#ffffff;
}

div.bridges_split,div.bridges_sum,div.regular {
  float:none;
  width:100%;
  height:auto;
  border:none;
  margin:0px;
  padding:0px;
  overflow:hidden;
}

div.bridges_split {
	display:none;
}

div.regular,bridges_sum {
	display:block;
}

td.report_header,td.report_header_double,td.report_header_triple,td.report_header_quadruple {
  padding-top:3px;
  padding-bottom:3px;
  text-align:center;
  font-family:verdana,arial,sans-serif;
  color:black;
  font-size:10px;
  border:solid 1px #cdcdcd;
  background-color:#b7d3e9;
}

td.report_header {
  width:57px;
}

td.report_header_double {
  width:118px;
}

td.report_header_triple  {
  width:185px;
}

td.report_header_quadruple {
  width:240px;
}

td.report_header_label {
	margin:0px;
	padding:0px;
  padding-top:3px;
  padding-bottom:3px;
  font-family:verdana,arial,sans-serif;
  color:black;
  font-size:10px;
  overflow:hidden;
  border:solid 1px #cdcdcd;
  width:228px;
}

td.event_block {
	margin-left:350px;
  padding:3px;
  padding-top:3px;
  padding-bottom:3px;
  background-color:transparent;
	background-image:none;
  background-repeat:repeat-y;
  background-position:center;
  text-align:center;
  font-family:verdana,arial,sans-serif;
  color:black;
  font-size:10px;
  width:900px;
}

ul.micro, ul.micro_event {
  width:100%;
  border:none;
  padding:0px;
  margin:0px;
}

ul.micro li {
  border:none;
  padding:0px;
  margin:0px;
  display:block;
  width:42px;
  float:left;
  overflow:hidden;
}

td.report_header_quadruple center ul.micro li {
  width:34px;
}

ul.micro_event li {
  border:none;
  padding:0px;
  margin:0px;
  display:block;
  width:49px;
  float:left;
  overflow:hidden;
}

li.choose_report {
  display:block;
  text-align:left;
}

li.choose_report_check {
  display:block;
  text-align:left;
  width:15px;
  height:30px;
}

li.choose_report_check_label {
  display:block;
  width:255px;
  height:30px;
  margin-left:20px;
  margin-top:-30px;
  overflow:hidden;
}

ul.choose_report_across {
  display:block;
}

ul.choose_report {
	text-align:left;
  display:block;
  width:260px;
}

li.choose_report_across {
  display:block;
  text-align:left;
  float:left;
  width:65px;
}

li.choose_report_across_wide {
  display:block;
  text-align:left;
  float:left;
  width:130px;
}

li.choose_report_across_extra_wide {
  display:block;
  text-align:left;
  float:left;
  width:260px;
}

div.choose_report_across {
  display:block;
  float:left;
  height:600px;
  width:300px;
}

div.choose_report_submit {
	position:absolute;
	top:600px;
	left:350px;
  display:block;
  height:40px;
  width:100px;
}

#menuBar,
#bannerBar,
.staffsitehead,
.logoside #helpside {
  display: none;
}

#logobar {
  border-bottom: 2px solid #000;
}

a.logo {
background: url(<%= asset_path 'logo_infobase_without.jpeg' %>) no-repeat;
width: 137px;
height: 49px;
display: block;
margin: 5px 0px;
}

h1 {
  margin-bottom: 0px;
}

#footer {
  border-top: 1px solid silver;
  padding-top: 20px;
  text-align: center;
}

#wrapper {
  margin: 0 auto;
  width: 966px;
  
}